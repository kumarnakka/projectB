pipeline {
      agent any
            stages {
                    stage('folder') {
                           steps {
                           sh 'mkdir pipelinetest'
                                   }
                                   }
                   stage('checkpoint') {
                            steps {
                                   input('Do you want to proceed?')
                                   }
                                   }
                    stage('build') {
                            steps {
                            sh 'mvn clean install package'
                                   }
                                   }
                   stage('copying') {
                          steps {
                          sh 'cp -R /var/lib/jenkins/workspace/test1/webapp/target/* pipelinetest'
                          }
                          }
}
}
