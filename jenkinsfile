pipeline {
        agent any
                stages {
                        stage('One') {
                                steps {
                                        echo 'hi, this is kumar'
                                }
                 }
                stage('Two') {
                       steps  {
                                input('do you want to proceed?')
                        }
             }
             stage('Three') {
                     when {
                             not {
                                   branch "master"
                            }
                   }
                   steps {
                           echo "hello"
                   }
                   }
stage('Four') {
             parallel {
                   stage('unit test') {
                                      steps {
                                            echo "running the unit test..."
                           }
               }
              stage('integration test') {
                                  agent {
                                        docker {
                                               reusenode false
                                               image 'ubuntu'
                                       }
                                      }
                                      steps {
                                            echo 'running the integration test...'
                             }
                        }
             }
}
}

}
